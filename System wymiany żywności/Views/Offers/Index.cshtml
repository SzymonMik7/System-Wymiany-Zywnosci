@using Microsoft.AspNetCore.Identity
@inject UserManager<System_wymiany_żywności.Models.ApplicationUser> UserManager
@model IEnumerable<System_wymiany_żywności.Models.Offer>

<h2 class="mb-4">Dostępne Oferty</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle"></i> Dodaj nową ofertę
    </a>
</p>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Tytuł</th>
                <th>Cena (pkt)</th>
                <th>Kategoria</th>
                <th>Sprzedawca</th>
                <th class="text-center">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var currentUser = await UserManager.GetUserAsync(User);
                <tr>
                    <td class="fw-bold">@item.Title</td>
                    <td><span class="badge bg-warning text-dark">@item.PriceInPoints pkt</span></td>
                    <td>@item.Category?.Name</td>
                    <td>@item.User?.UserName <small class="text-muted">(Reputacja: @item.User?.TrustScore)</small></td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">Szczegóły</a>

                            @* Wyświetlaj Edytuj/Usuń tylko właścicielowi ogłoszenia *@
                            @if (currentUser != null && item.UserId == currentUser.Id)
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edytuj</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Usuń</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">Aktualnie nie ma żadnych aktywnych ofert.</div>
}