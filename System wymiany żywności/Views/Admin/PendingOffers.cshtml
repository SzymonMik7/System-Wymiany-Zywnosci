@model IEnumerable<System_wymiany_żywności.Models.Offer>

<h2>Oczekujące oferty</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Użytkownik</th>
            <th>Data dodania</th>
            <th>Akcja</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.User.UserName</td>
                <td>@item.CreatedAt.ToShortDateString()</td>
                <td>
                    <form asp-action="Approve" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Zatwierdź</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (!Model.Any())
{
    <p class="text-muted">Brak ofert oczekujących na zatwierdzenie.</p>
}