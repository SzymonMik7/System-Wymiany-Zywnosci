@using Microsoft.AspNetCore.Identity
@using System_wymiany_żywności.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // 1. Pobieramy aktualnie zalogowanego użytkownika z bazy
        var currentUser = await UserManager.GetUserAsync(User);

        <li class="nav-item d-flex align-items-center me-2">
            <span class="badge bg-success text-white p-2">
                @(currentUser?.WalletBalance ?? 0) pkt
            </span>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
                Witaj <span class="fw-bold">@currentUser?.UserName</span>!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a></li>
        <li class="nav-item"><a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Logowanie</a></li>
    }
</ul>